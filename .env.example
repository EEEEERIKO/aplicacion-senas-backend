# Environment variables example for aplicacion_senas_backend
# Copy to .env and fill values for local development or CI

DATABASE_URL=postgresql+psycopg2://appuser:secret@db:5432/aplicacion_senas
SECRET_KEY=change-this-secret-in-prod
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Firebase service account: either set path or JSON content
GOOGLE_APPLICATION_CREDENTIALS=
FIREBASE_SERVICE_ACCOUNT_JSON=

# S3 / MinIO settings (optional)
S3_BUCKET=aplicacion-senas-assets
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Redis for queues and cache (optional)
REDIS_URL=redis://redis:6379/0
